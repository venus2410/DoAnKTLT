<h2>Thống kê hàng hết hạn</h2>
<table>
    <tr>
        <th>Mã mặt hàng</th>
        <th>Tên mặt hàng</th>
        <th>Số lượng</th>
        <th>Hạn dùng</th>
    </tr>
    @foreach (HangTon ht in Model.lstHangHetHan)
    {
        <tr>
            <td>@ht.MaMH</td>
            <td>@ht.TenMH</td>
            <td>@ht.SoLuongTon</td>
            <td>@ht.HanSD</td>
        </tr>
    }
</table>
@Model.chuoi
