<form method="post">
    <label for="Ma">Mã:</label>
    <input name="Ma" /><br />
    <label for="Ten">Tên:</label>
    <input name="Ten" /><br />
    <label for="HanDung">Hạn dùng:</label>
    <input name="HanDung" type="date" /><br />
    <label for="CongTySX">Công Ty SX:</label>
    <input name="CongTySX" /><br />
