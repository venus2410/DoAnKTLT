    <select name="Loai">
        <option value="">Chưa xác định</option>
        @foreach(LoaiHang lh in Model.lstLH)
        {
        <option value="@lh.MaLH">@lh.TenLH</option>
        }
    </select><br />
    <label for="Gia">Giá:</label>
    <input name="Gia" type="number" min="0"/><br />
    <input type="submit" value="Tạo" />
</form>
